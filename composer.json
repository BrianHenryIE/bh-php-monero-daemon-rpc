{
    "name": "brianhenryie/bh-php-monero-daemon-rpc",
    "description": "Monero Daemon JSON RPC client.",
    "keywords": ["Monero", "XMR", "monerod", "monero-daemon-rpc", "JSONRPC", "JSON-RPC", "cryptocurrency"],
    "homepage": "https://github.com/brianhenryie/bh-php-monero-daemon-rpc",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "BrianHenryIE",
            "email": "brianhenryie@gmail.com"
        },
        {
            "name": "SerHack",
            "email": "support@monerointegrations.com"
        },
        {
            "name": "cryptochangements34",
            "email": "bW9uZXJv@gmail.com"
        },
        {
            "name": "sneurlax",
            "email": "sneurlax@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "BrianHenryIE\\MoneroDaemonRpc\\": "src/"
        }
    },
    "require": {
        "ext-json": "*",
        "json-mapper/json-mapper": "*",
        "psr/http-client-implementation": "*",
        "simpod/json-rpc": "^0.2.0"
    },
    "require-dev": {
        "cweagans/composer-patches": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "*",
        "guzzlehttp/guzzle": "^7.4",
        "jaschilz/php-coverage-badger": "^2.0",
        "mockery/mockery": "^1.5",
        "phpstan/extension-installer": "*",
        "phpunit/phpcov": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "extra": {
        "patches": {
            "jaschilz/php-coverage-badger": {
                "Allow customising the text": "https://github.com/JASchilz/PHPCoverageBadge/pull/1.patch"
            }
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "test-coverage": [
            "phpunit --coverage-text --coverage-clover tests/reports/clover.xml --coverage-html tests/reports/html"
        ],
        "lint": [
            "phpcbf || true",
            "phpcs || true",
            "phpstan"
        ]
    }
}
